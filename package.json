{
  "name": "entangled-vscode",
  "displayName": "Entangled VSCode",
  "description": "Navigation and visual aid for Entangled Literate Programming",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "entangled-markdown",
        "aliases": ["Entangled Markdown", "entangled-markdown"],
        "extensions": [".md"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "entangled-vscode.goToDefinition",
        "title": "Go to Definition"
      },
      {
        "command": "entangled-vscode.findReferences",
        "title": "Find References"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:entangled-markdown"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
